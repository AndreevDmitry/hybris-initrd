# "Flash" other partitions to their "factory-reset" versions
for SCRIPT in /var/lib/platform-updates/*; do
  error=
  if [ -x $SCRIPT ]; then
    echo "Running $SCRIPT ... "
    $SCRIPT > /dev/null && echo "[OK]" || { error=yes; echo "[FAILED]" 1>&2; }
  else
    echo "File '$SCRIPT' is not an executable, skipping."
  fi
done

if [ $error ]; then
    touch /tmp/flash-error
    exit 1
fi

